@model core_weather.Models.City

@{
    ViewData["Title"] = "City";
}

<div class="container">
    <div class="container">
        <div class="form-group col-md-offset-3 col-md-5">
            <h1>Weather for selected city</h1>
            <label asp-for="Name"></label>
            <span class="badge alert-primary">@Model.Name</span>
            <br />
            <label asp-for="Longitude"></label>
            <span class="badge alert-primary">@Model.Longitude</span>
            <br />
            <label asp-for="Latitude"></label>
            <span class="badge alert-primary">@Model.Latitude</span>
            <br />
            <label asp-for="DateTime"></label>
            <span class="badge alert-primary">@Model.DateTime</span>
            <br />
            <label asp-for="Wind"></label>
            <span class="badge alert-primary">@Model.Wind</span>
            <br />
            <label asp-for="Visibility"></label>
            <span class="badge alert-primary">@Model.Visibility</span>
            <br />
            <label asp-for="Weather"></label>
            <span class="badge alert-primary">@Model.Weather</span>
            <br />
            <label asp-for="SkyConditions"></label>
            <span class="badge alert-primary">@Model.SkyConditions</span>
            <br />
            <label asp-for="TempCelcius"></label>
            <span class="badge alert-primary">@Model.TempCelcius</span>
            <br />
            <label asp-for="TempFahrenheit"></label>
            <span class="badge alert-primary">@Model.TempFahrenheit</span>
            <br />
            <label asp-for="Humidity"></label>
            <span class="badge alert-primary">@Model.Humidity</span>
            <br />
            <label asp-for="Pressure"></label>
            <span class="badge alert-primary">@Model.Pressure</span>
            <br />
            <label asp-for="Sunrise"></label>
            <span class="badge alert-primary">@Model.Sunrise</span>
            <br />
            <label asp-for="Sunset"></label>
            <span class="badge alert-primary">@Model.Sunset</span>
            <br />

            <form method="get">
                <button asp-controller="WeatherForecast" asp-action="SearchByCity" class="btn btn-primary">Back</button>
            </form>
        </div>
    </div>
</div>